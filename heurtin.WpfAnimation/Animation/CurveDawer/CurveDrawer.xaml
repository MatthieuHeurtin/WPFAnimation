<Window x:Class="heurtin.WpfAnimation.Animation.CruveDrawer.CurveDrawer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:heurtin.WpfAnimation.Animation.CurveDawer.Converter"
        mc:Ignorable="d"
        Title="Curve Drawer" Height="450" Width="800" Loaded="Window_Loaded">

    <Window.Resources>

        <local:DoubleArrayToPointsConverter x:Key="pointConverter" Scale="5" />

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="AliceBlue"></Grid>

        <Grid Grid.Column="1" Background="PapayaWhip" >
            <Viewbox>
                <Canvas Name="myCan" Width="200" Height="100" Background="White"  >
                    <Polyline Stroke="Green" StrokeThickness="1" Points="{Binding Output, Converter={StaticResource pointConverter}}"  Canvas.Top="50"/>
                </Canvas>
            </Viewbox>
        </Grid>
    </Grid>
</Window>
